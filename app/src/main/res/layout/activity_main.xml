<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edHoehe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/et_Hoehe"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/btnZeichnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edHoehe"
        android:layout_alignBottom="@+id/edHoehe"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_Zeichen" />

    <TextView
        android:id="@+id/tvAusgabe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnZeichnen"
        android:letterSpacing="0.2"
        android:scrollbars="vertical"
        android:hint="@string/tvHint"
        android:textAlignment="center"
        android:textSize="25dp" />

</RelativeLayout>
